#!/bin/bash

set -e

MODE=${1:-"$MODE"}
LERNA=$(which lerna)

case ${MODE} in
"canary")
    ${LERNA} publish --canary --conventional-commits --preid canary --dist-tag canary --no-changelog
    ;;
"prerelease")
    ${LERNA} publish --conventional-commits --conventional-prerelease=* --dist-tag next --preid next
    ;;
"release")
    ${LERNA} publish --conventional-commits --conventional-graduate --create-release gitlab --no-changelog
    ;;
esac
