#!/bin/bash

set -e

MODE=${1:-"$MODE"}
LERNA=$(which lerna)

case ${MODE} in
"canary")
    ${LERNA} publish --canary --preid canary --dist-tag canary --no-changelog --conventional-commits
    ;;
"prerelease")
    ${LERNA} publish --conventional-commits --dist-tag next --preid next
    ;;
"release")
    ${LERNA} publish --conventional-commits --conventional-graduate --create-release gitlab
    ;;
esac
